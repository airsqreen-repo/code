<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.pusulait.airsqreen.domain.security.user.Role</class>
        <class>com.pusulait.airsqreen.domain.security.user.Right</class>
        <class>com.pusulait.airsqreen.domain.security.user.RoleRight</class>
        <class>com.pusulait.airsqreen.domain.security.user.UserRole</class>
        <class>com.pusulait.airsqreen.domain.security.user.User</class>
        <class>com.pusulait.airsqreen.domain.token.OauthAccessToken</class>
        <class>com.pusulait.airsqreen.domain.SystemError</class>
        <class>com.pusulait.airsqreen.domain.audit.PersistentAuditEvent</class>
        <class>com.pusulait.airsqreen.domain.base.DataStatus</class>
        <class>com.pusulait.airsqreen.domain.base.AuditBase</class>
        <class>com.pusulait.airsqreen.domain.base.ModelBase</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost/airsqreen?user=postgres&amp;password=1234&amp;ssl=false"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="1234"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>

            <property name="hbm2ddl.auto" value="update"/>

            <property name="javax.persistence.sql-load-script-source" value="META-INF/beforeRunScript.sql" />

        </properties>
    </persistence-unit>

</persistence>
